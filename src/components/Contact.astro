---
// Contact Section
---

<section id="contact" class="min-h-screen py-24 px-4">
  <div class="max-w-3xl mx-auto">
    <h2 
      class="text-4xl md:text-5xl font-bold text-center mb-4"
      data-i18n="contact.title"
    >
      Let's Work Together
    </h2>
    <p 
      class="text-center text-lg text-gray-600 dark:text-gray-400 mb-12"
      data-i18n="contact.subtitle"
    >
      Have a project in mind? I'd love to hear from you.
    </p>
    
    <!-- Contact Form -->
    <form 
      class="bg-gray-50 dark:bg-[#2a2a2a] p-8 rounded-xl mb-12 transition-all duration-300 hover:shadow-2xl hover:shadow-[#F54927]/10"
      name="contact" 
      method="POST" 
      data-netlify="true"
    >
      <input type="hidden" name="form-name" value="contact" />
      
      <div class="mb-6">
        <label for="name" class="block font-medium mb-2" data-i18n="contact.namePlaceholder">Your Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required
          class="w-full px-4 py-3 bg-white dark:bg-[#2a2a2a] border-2 border-gray-200 dark:border-gray-700 rounded-lg focus:border-[#F54927] focus:outline-none transition-all duration-300 hover:border-[#F54927]/50 focus:scale-105 focus:shadow-lg focus:shadow-[#F54927]/20"
        />
      </div>
      
      <div class="mb-6">
        <label for="email" class="block font-medium mb-2" data-i18n="contact.emailPlaceholder">Your Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          class="w-full px-4 py-3 bg-white dark:bg-[#2a2a2a] border-2 border-gray-200 dark:border-gray-700 rounded-lg focus:border-[#F54927] focus:outline-none transition-all duration-300 hover:border-[#F54927]/50 focus:scale-105 focus:shadow-lg focus:shadow-[#F54927]/20"
        />
      </div>
      
      <div class="mb-6">
        <label for="message" class="block font-medium mb-2" data-i18n="contact.messagePlaceholder">Your Message</label>
        <textarea 
          id="message" 
          name="message" 
          rows="6" 
          required
          class="w-full px-4 py-3 bg-white dark:bg-[#2a2a2a] border-2 border-gray-200 dark:border-gray-700 rounded-lg focus:border-[#F54927] focus:outline-none transition-all duration-300 hover:border-[#F54927]/50 focus:scale-105 focus:shadow-lg focus:shadow-[#F54927]/20 resize-vertical"
        ></textarea>
      </div>
      
      <button 
        type="submit"
        class="w-full px-8 py-4 bg-[#F54927] text-white rounded-lg font-semibold hover:bg-[#d63f1f] transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-[#F54927]/50 active:scale-95"
        data-i18n="contact.sendButton"
      >
        Send Message
      </button>
    </form>
  </div>
</section>

<script>
  // Update on language change
  window.addEventListener('languageChange', (event: any) => {
    const { translations } = event.detail;
    
    // Update form labels and button
    ['contact.title', 'contact.subtitle', 'contact.namePlaceholder', 'contact.emailPlaceholder', 'contact.messagePlaceholder', 'contact.sendButton'].forEach(key => {
      const element = document.querySelector(`[data-i18n="${key}"]`);
      if (element) {
        const keys = key.split('.');
        let value: any = translations;
        for (const k of keys) {
          value = value[k];
        }
        if (value) {
          if (element.tagName === 'LABEL') {
            element.textContent = value;
          } else {
            element.textContent = value;
          }
        }
      }
    });
  });
</script>
