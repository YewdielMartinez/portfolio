---
// Contact Section
const PUBLIC_KEY = import.meta.env.PUBLIC_KEY;
const TEMPLATE_ID = import.meta.env.TEMPLATE_ID;
const SERVICE_ID = import.meta.env.SERVICE_ID;
---

<section 
  id="contact" 
  class="min-h-screen py-24 px-4"
  data-public-key={PUBLIC_KEY}
  data-template-id={TEMPLATE_ID}
  data-service-id={SERVICE_ID}
>
  <div class="max-w-3xl mx-auto">
    <h2 
      class="text-4xl md:text-5xl font-bold text-center mb-4"
      data-i18n="contact.title"
    >
      Let's Work Together
    </h2>
    <p 
      class="text-center text-lg text-gray-600 dark:text-gray-400 mb-12"
      data-i18n="contact.subtitle"
    >
      Have a project in mind? I'd love to hear from you.
    </p>
    
    <!-- Contact Form -->
    <form 
      id="contact-form"
      class="bg-gray-50 dark:bg-[#2a2a2a] p-8 rounded-xl mb-12 transition-all duration-300 hover:shadow-2xl hover:shadow-[#F54927]/10"
    >
      
      <div class="mb-6">
        <label for="name" class="block font-medium mb-2" data-i18n="contact.namePlaceholder">Your Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required
          class="w-full px-4 py-3 bg-white dark:bg-[#2a2a2a] border-2 border-gray-200 dark:border-gray-700 rounded-lg focus:border-[#F54927] focus:outline-none transition-all duration-300 hover:border-[#F54927]/50 focus:scale-105 focus:shadow-lg focus:shadow-[#F54927]/20"
        />
      </div>
      
      <div class="mb-6">
        <label for="email" class="block font-medium mb-2" data-i18n="contact.emailPlaceholder">Your Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          class="w-full px-4 py-3 bg-white dark:bg-[#2a2a2a] border-2 border-gray-200 dark:border-gray-700 rounded-lg focus:border-[#F54927] focus:outline-none transition-all duration-300 hover:border-[#F54927]/50 focus:scale-105 focus:shadow-lg focus:shadow-[#F54927]/20"
        />
      </div>
      
      <div class="mb-6">
        <label for="message" class="block font-medium mb-2" data-i18n="contact.messagePlaceholder">Your Message</label>
        <textarea 
          id="message" 
          name="message" 
          rows="6" 
          required
          class="w-full px-4 py-3 bg-white dark:bg-[#2a2a2a] border-2 border-gray-200 dark:border-gray-700 rounded-lg focus:border-[#F54927] focus:outline-none transition-all duration-300 hover:border-[#F54927]/50 focus:scale-105 focus:shadow-lg focus:shadow-[#F54927]/20 resize-vertical"
        ></textarea>
      </div>
      
      <button 
        type="submit"
        id="submit-button"
        class="w-full px-8 py-4 bg-[#F54927] text-white rounded-lg font-semibold hover:bg-[#d63f1f] transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-[#F54927]/50 active:scale-95"
        data-i18n="contact.sendButton"
      >
        Send Message
      </button>
    </form>

    <!-- Success Message -->
    <div 
      id="success-message" 
      class="hidden bg-green-100 dark:bg-green-900/30 border-2 border-green-500 text-green-700 dark:text-green-400 px-6 py-4 rounded-lg mb-4 text-center"
    >
      <p class="font-semibold" data-i18n="contact.successTitle">✓ Message sent successfully!</p>
      <p class="text-sm" data-i18n="contact.successMessage">I'll get back to you soon.</p>
    </div>

    <!-- Error Message -->
    <div 
      id="error-message" 
      class="hidden bg-red-100 dark:bg-red-900/30 border-2 border-red-500 text-red-700 dark:text-red-400 px-6 py-4 rounded-lg mb-4 text-center"
    >
      <p class="font-semibold" data-i18n="contact.errorTitle">✗ Error sending message</p>
      <p class="text-sm" data-i18n="contact.errorMessage">Please try again later.</p>
    </div>
  </div>
</section>

<script>
  // Import EmailJS
  import emailjs from '@emailjs/browser';

  // Get credentials from data attributes
  const contactSection = document.getElementById('contact') as HTMLElement;
  const PUBLIC_KEY = contactSection?.dataset.publicKey || '';
  const TEMPLATE_ID = contactSection?.dataset.templateId || '';
  const SERVICE_ID = contactSection?.dataset.serviceId || '';

  // Initialize EmailJS
  emailjs.init(PUBLIC_KEY);

  // Handle form submission
  const contactForm = document.getElementById('contact-form') as HTMLFormElement;
  const submitButton = document.getElementById('submit-button') as HTMLButtonElement;
  const successMessage = document.getElementById('success-message');
  const errorMessage = document.getElementById('error-message');

  // Get current language
  let currentLanguage = 'en';
  
  // Load translations
  async function getTranslations() {
    const module = await import('../data/translations');
    return module.translations[currentLanguage as 'en' | 'es'];
  }

  if (contactForm) {
    contactForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Get current translations
      const translations = await getTranslations();

      // Disable button and show loading state
      const originalText = submitButton.textContent;
      submitButton.disabled = true;
      submitButton.textContent = translations.contact.sending;
      submitButton.classList.add('opacity-50', 'cursor-not-allowed');

      // Hide previous messages
      successMessage?.classList.add('hidden');
      errorMessage?.classList.add('hidden');

      try {
        // Send email using EmailJS
        await emailjs.sendForm(
          SERVICE_ID,
          TEMPLATE_ID,
          contactForm
        );

        // Show success message
        successMessage?.classList.remove('hidden');
        contactForm.reset();

        // Hide success message after 5 seconds
        setTimeout(() => {
          successMessage?.classList.add('hidden');
        }, 5000);

      } catch (error) {
        console.error('Error sending email:', error);
        
        // Show error message
        errorMessage?.classList.remove('hidden');

        // Hide error message after 5 seconds
        setTimeout(() => {
          errorMessage?.classList.add('hidden');
        }, 5000);
      } finally {
        // Re-enable button
        submitButton.disabled = false;
        submitButton.textContent = originalText;
        submitButton.classList.remove('opacity-50', 'cursor-not-allowed');
      }
    });
  }

  // Update on language change
  window.addEventListener('languageChange', (event: any) => {
    const { translations, language } = event.detail;
    currentLanguage = language;
    
    // Update all contact elements
    ['contact.title', 'contact.subtitle', 'contact.namePlaceholder', 'contact.emailPlaceholder', 'contact.messagePlaceholder', 'contact.sendButton', 'contact.successTitle', 'contact.successMessage', 'contact.errorTitle', 'contact.errorMessage'].forEach(key => {
      const element = document.querySelector(`[data-i18n="${key}"]`);
      if (element) {
        const keys = key.split('.');
        let value: any = translations;
        for (const k of keys) {
          value = value[k];
        }
        if (value) {
          element.textContent = value;
        }
      }
    });
  });
</script>
