---
// Sección de Trabajo/Proyectos con Bento Grid
---

<section id="work" class="min-h-screen py-24 px-4">
  <div class="max-w-7xl mx-auto">
    <h2 
      class="text-4xl md:text-5xl font-bold text-center mb-16"
      data-i18n="work.title"
    >
      Work
    </h2>
    
    <div id="projects-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-4 auto-rows-[200px]">
      <!-- Los proyectos se insertarán aquí mediante JavaScript -->
    </div>
  </div>
</section>

<!-- Project Detail Modal -->
<div 
  id="project-modal" 
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black/80 backdrop-blur-sm p-4"
  style="animation: fade-in 0.3s ease-out;"
>
  <div 
    id="modal-content"
    class="relative bg-white dark:bg-[#1a1a1a] rounded-3xl shadow-2xl max-w-5xl w-full max-h-[95vh] overflow-hidden flex flex-col"
    style="animation: slideIn 0.4s ease-out;"
  >
    <!-- Modal Header with Image - Full height -->
    <div id="modal-header" class="relative h-[60vh] min-h-[500px] overflow-hidden bg-black">
      <img id="modal-image" src="" alt="" class="w-full h-full object-contain" />
      <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
      
      <!-- Close Button - Positioned over image -->
      <button 
        id="modal-close" 
        class="absolute top-6 right-6 text-white hover:text-[#F54927] transition-all p-3 hover:rotate-90 hover:scale-110 duration-300 z-20 bg-black/50 hover:bg-black/70 backdrop-blur-sm rounded-full"
      >
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      
      <div class="absolute bottom-8 left-8 right-8">
        <h3 id="modal-title" class="text-4xl font-bold text-white mb-4 drop-shadow-lg"></h3>
        <div id="modal-tags" class="flex flex-wrap gap-2">
          <!-- Tags will be inserted here -->
        </div>
      </div>
    </div>

    <!-- Modal Body - Scrollable content -->
    <div class="flex-1 overflow-y-auto p-8">
      <!-- Year and Role -->
      <div class="flex items-center gap-6 mb-6 text-sm text-gray-600 dark:text-gray-400">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span id="modal-year"></span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span id="modal-role"></span>
        </div>
      </div>

      <!-- Description -->
      <div class="mb-8">
        <h4 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white" data-i18n="work.aboutProject">About the Project</h4>
        <p id="modal-description" class="text-gray-600 dark:text-gray-400 leading-relaxed text-lg"></p>
      </div>

      <!-- Features -->
      <div class="mb-8">
        <h4 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white" data-i18n="work.keyFeatures">Key Features</h4>
        <ul id="modal-features" class="space-y-2">
          <!-- Features will be inserted here -->
        </ul>
      </div>

      <!-- Links -->
      <div id="modal-links" class="flex flex-wrap gap-4">
        <!-- Links will be inserted here -->
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideIn {
    from {
      transform: scale(0.9) translateY(50px);
      opacity: 0;
    }
    to {
      transform: scale(1) translateY(0);
      opacity: 1;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Efecto de brillo en las cards */
  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(245, 73, 39, 0.1),
      transparent
    );
    transition: left 0.5s;
    z-index: 1;
    pointer-events: none;
  }

  .project-card:hover::before {
    left: 100%;
  }

  /* Scrollbar personalizado para el modal */
  #modal-content::-webkit-scrollbar {
    width: 8px;
  }

  #modal-content::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
  }

  #modal-content::-webkit-scrollbar-thumb {
    background: #F54927;
    border-radius: 10px;
  }

  #modal-content::-webkit-scrollbar-thumb:hover {
    background: #d63f1f;
  }
</style>

<script>
  let projectsFullData: any[] = [];
  let hoverTimeouts: Map<number, any> = new Map();
  const HOVER_DELAY = 1500; // 1.5 seconds

  async function loadProjects() {
    try {
      // Load from TypeScript file
      const { projects } = await import('../data/projects');
      const currentLang = (localStorage.getItem('language') || 'en') as 'en' | 'es';
      projectsFullData = projects[currentLang] || [];
      
      // Load translations from TypeScript
      const { translations } = await import('../data/translations');
      const viewProjectText = translations[currentLang].work.viewDetails;
      
      renderProjects(viewProjectText);
    } catch (error) {
      console.error('Error loading projects:', error);
    }
  }
  
  function renderProjects(viewProjectText: string) {
    const grid = document.getElementById('projects-grid');
    if (!grid) return;
    
    grid.innerHTML = projectsFullData.map((project, index) => {
      // Clases de grid optimizadas tipo Bento Grid
      let gridClass = '';
      let rowSpan = '';
      
      if (project.gridSize === 'wide') {
        // Watchlt y EcoSend: grandes y horizontales
        gridClass = 'sm:col-span-2 lg:col-span-3';
        rowSpan = 'lg:row-span-2';
      } else if (project.gridSize === 'medium') {
        // App Móvil: vertical alto
        gridClass = 'sm:col-span-1 lg:col-span-2';
        rowSpan = 'lg:row-span-3';
      } else {
        // MedicLife y Banchido: más pequeños
        gridClass = 'sm:col-span-1 lg:col-span-2';
        rowSpan = 'lg:row-span-2';
      }
      
      // Object-fit: contain para verticales (medium), cover para horizontales
      const objectFit = project.gridSize === 'medium' ? 'object-contain' : 'object-cover';
      
      return `
        <article 
          class="project-card bg-white dark:bg-[#1a1a1a] rounded-3xl overflow-hidden transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:shadow-[#F54927]/30 group cursor-pointer ${gridClass} ${rowSpan} flex flex-col border-2 border-gray-200 dark:border-gray-800 hover:border-[#F54927]/50" 
          style="animation: fade-in-up 0.6s ease-out ${index * 0.1}s both"
          data-project-index="${index}"
        >
          <!-- Contenedor de imagen con marco interno -->
          <div class="relative flex-1 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-900 dark:to-gray-800 p-4 overflow-hidden">
            <div class="relative w-full h-full rounded-2xl overflow-hidden shadow-lg ring-1 ring-gray-300/50 dark:ring-gray-700/50">
              <img 
                src="${project.image}" 
                alt="${project.title}"
                class="w-full h-full ${objectFit} transition-all duration-700 group-hover:scale-110 group-hover:brightness-110"
              />
              <!-- Overlay sutil en hover -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          </div>
          
          <!-- Información del proyecto - siempre visible -->
          <div class="p-4 bg-white dark:bg-[#1a1a1a] border-t-2 border-gray-100 dark:border-gray-800">
            <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-white group-hover:text-[#F54927] transition-colors line-clamp-1">
              ${project.title}
            </h3>
            
            <!-- Tags - siempre visibles -->
            <div class="flex flex-wrap gap-1.5 mb-2">
              ${project.tags.slice(0, 4).map((tag: string) => `
                <span class="px-2.5 py-1 bg-gradient-to-r from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-xs font-semibold border border-gray-300 dark:border-gray-600 group-hover:border-[#F54927]/50 group-hover:text-[#F54927] transition-all">
                  ${tag}
                </span>
              `).join('')}
            </div>
            
            <!-- Indicador de click -->
            <div class="flex items-center gap-2 text-xs text-gray-500 dark:text-gray-400 group-hover:text-[#F54927] transition-colors mt-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              <span class="font-medium">${viewProjectText}</span>
            </div>
          </div>
        </article>
      `;
    }).join('');

    // Add hover event listeners
    const projectCards = document.querySelectorAll('.project-card');
    projectCards.forEach((card) => {
      const index = parseInt((card as HTMLElement).dataset.projectIndex || '0');
      
      card.addEventListener('mouseenter', () => {
        const timeout = setTimeout(() => {
          openProjectModal(index);
        }, HOVER_DELAY);
        hoverTimeouts.set(index, timeout);
      });

      card.addEventListener('mouseleave', () => {
        const timeout = hoverTimeouts.get(index);
        if (timeout) {
          clearTimeout(timeout);
          hoverTimeouts.delete(index);
        }
      });

      card.addEventListener('click', () => {
        openProjectModal(index);
      });
    });
  }

  async function openProjectModal(index: number) {
    const project = projectsFullData[index];
    if (!project) return;

    // Clear any pending timeouts
    hoverTimeouts.forEach(timeout => clearTimeout(timeout));
    hoverTimeouts.clear();

    // Get current translations
    const { translations } = await import('../data/translations');
    const currentLang = (localStorage.getItem('language') || 'en') as 'en' | 'es';
    const t = translations[currentLang];

    // Populate modal
    const modal = document.getElementById('project-modal');
    const modalImage = document.getElementById('modal-image') as HTMLImageElement;
    const modalTitle = document.getElementById('modal-title');
    const modalTags = document.getElementById('modal-tags');
    const modalYear = document.getElementById('modal-year');
    const modalRole = document.getElementById('modal-role');
    const modalDescription = document.getElementById('modal-description');
    const modalFeatures = document.getElementById('modal-features');
    const modalLinks = document.getElementById('modal-links');

    if (modalImage) modalImage.src = project.image;
    if (modalTitle) modalTitle.textContent = project.title;
    
    if (modalTags) {
      modalTags.innerHTML = project.tags.map((tag: string) => `
        <span class="px-3 py-1 bg-white/20 backdrop-blur-sm text-white rounded-lg text-sm font-medium">
          ${tag}
        </span>
      `).join('');
    }

    if (modalYear) modalYear.textContent = project.year || 'N/D';
    if (modalRole) modalRole.textContent = project.role || 'Desarrollador';
    if (modalDescription) modalDescription.textContent = project.detailedDescription || project.description;

    if (modalFeatures && project.features) {
      modalFeatures.innerHTML = project.features.map((feature: string) => `
        <li class="flex items-start gap-3">
          <svg class="w-5 h-5 text-[#F54927] mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-gray-600 dark:text-gray-400">${feature}</span>
        </li>
      `).join('');
    }

    if (modalLinks) {
      const links = [];
      if (project.github) {
        links.push(`
          <a href="${project.github}" target="_blank" rel="noopener noreferrer" 
             class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 dark:bg-gray-800 text-white rounded-xl font-semibold hover:scale-105 hover:shadow-xl transition-all">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            ${t.work.viewCode}
          </a>
        `);
      }
      if (project.demo) {
        links.push(`
          <a href="${project.demo}" target="_blank" rel="noopener noreferrer" 
             class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#F54927] to-[#FF8000] text-white rounded-xl font-semibold hover:scale-105 hover:shadow-xl hover:shadow-[#F54927]/50 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            ${t.work.viewDemo}
          </a>
        `);
      }
      if (project.link && project.link !== '#') {
        links.push(`
          <a href="${project.link}" target="_blank" rel="noopener noreferrer" 
             class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#F54927] to-[#FF8000] text-white rounded-xl font-semibold hover:scale-105 hover:shadow-xl hover:shadow-[#F54927]/50 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            ${t.work.viewDemo}
          </a>
        `);
      }
      modalLinks.innerHTML = links.join('');
    }

    // Show modal
    modal?.classList.remove('hidden');
    modal?.classList.add('flex');
  }

  function closeModal() {
    const modal = document.getElementById('project-modal');
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
  }

  // Modal close handlers
  const modalClose = document.getElementById('modal-close');
  const modal = document.getElementById('project-modal');
  
  modalClose?.addEventListener('click', closeModal);
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  // ESC key to close
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
  });
  
  // Update on language change
  window.addEventListener('languageChange', async (event: any) => {
    const { translations, lang } = event.detail;
    const viewProjectText = translations.work.viewDetails;
    
    // Reload projects data with new language
    const { projects } = await import('../data/projects');
    projectsFullData = projects[lang as 'en' | 'es'] || [];
    
    renderProjects(viewProjectText);
    
    // Update title
    const title = document.querySelector('[data-i18n="work.title"]');
    if (title) {
      title.textContent = translations.work.title;
    }
    
    // Update modal titles
    const aboutProjectTitle = document.querySelector('[data-i18n="work.aboutProject"]');
    if (aboutProjectTitle) {
      aboutProjectTitle.textContent = translations.work.aboutProject;
    }
    
    const keyFeaturesTitle = document.querySelector('[data-i18n="work.keyFeatures"]');
    if (keyFeaturesTitle) {
      keyFeaturesTitle.textContent = translations.work.keyFeatures;
    }
  });
  
  // Initial load
  loadProjects();
</script>
