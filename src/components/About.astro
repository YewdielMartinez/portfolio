---
// Sección "Sobre Mí" 
import SkillIcon from './SkillIcon';
import { skills } from '../data/skills';

// Obtener API keys desde variables de entorno
const TMDB_API_KEY = import.meta.env.API_MOVIE_KEY;
---

<section 
  id="about" 
  class="py-24 px-4 bg-gray-50 dark:bg-[#0D0D0D] transition-colors duration-300"
  data-tmdb-key={TMDB_API_KEY}
>
  <div class="max-w-6xl mx-auto">
    <h2 
      class="text-4xl md:text-5xl font-bold text-center mb-16"
      data-i18n="about.title"
    >
      About Me
    </h2>
    
    <div class="grid md:grid-cols-2 gap-12 items-center mb-16">
      <!-- Foto de perfil -->
      <div class="flex justify-center md:justify-end">
        <div class="w-64 h-64 rounded-full overflow-hidden bg-gray-300 dark:bg-gray-700 border-4 border-[#F54927] shadow-xl hover:scale-105 hover:rotate-3 transition-all duration-500 hover:shadow-2xl hover:shadow-[#F54927]/50 animate-fade-in">
          <img 
            id="about-avatar"
            src="/avatar.jpg" 
            alt="Profile"
            class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
          />
        </div>
      </div>
      
      <!-- Biografía -->
      <div class="space-y-6">
        <p 
          class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed mb-6"
          data-i18n="about.bio"
        >
          I'm a passionate developer who loves creating beautiful, functional applications. With expertise in modern web technologies, I focus on delivering exceptional user experiences and clean, maintainable code.
        </p>
        
        <!-- Letterboxd Link -->
        <a 
          href="https://letterboxd.com" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 bg-[#FF8000] hover:bg-[#F54927] text-white rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-[#FF8000]/50 font-semibold"
        >
          <svg class="w-5 h-5" viewBox="0 0 500 500" fill="currentColor">
            <circle cx="125" cy="250" r="115" opacity="0.8"/>
            <circle cx="375" cy="250" r="115" opacity="0.8"/>
          </svg>
          <span>My Letterboxd</span>
        </a>
      </div>
    </div>
    
    <!-- Skills Section -->
    <div class="mb-20">
      <h3 
        class="text-2xl font-bold mb-8 text-center"
        data-i18n="about.skillsTitle"
      >
        Skills & Technologies
      </h3>
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4 md:gap-6">
        {skills.map((skill, index) => (
          <div style={`animation: fade-in-up 0.5s ease-out ${index * 0.03}s both`}>
            <SkillIcon 
              client:load
              iconPath={skill.icon}
              color={skill.color}
              name={skill.name}
            />
          </div>
        ))}
      </div>
    </div>

    <!-- Sección de Presentación de Favoritos -->
    <div class="mt-24 max-w-4xl mx-auto">
      <h3 
        class="text-3xl font-bold mb-12 text-center"
        data-i18n="about.favorites"
      >
        My Favorites
      </h3>
      
      <!-- Contenedor unificado de presentación -->
      <div class="relative group">
        <!-- Botones de navegación -->
        <button 
          id="slideshow-prev" 
          class="absolute left-4 top-1/2 -translate-y-1/2 z-20 bg-[#F54927] text-white p-4 rounded-full shadow-2xl hover:bg-[#d63f1f] transition-all hover:scale-110"
          aria-label="Previous"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>

        <!-- Contenedor principal del póster -->
        <div class="relative overflow-hidden rounded-3xl shadow-2xl bg-gray-900 aspect-2/3 max-w-md mx-auto">
          <div id="slideshow-poster" class="w-full h-full relative transition-all duration-700">
            <!-- El póster se insertará aquí -->
            <div class="flex items-center justify-center h-full">
              <div class="animate-spin rounded-full h-16 w-16 border-b-4 border-[#F54927]"></div>
            </div>
          </div>
        </div>

        <button 
          id="slideshow-next" 
          class="absolute right-4 top-1/2 -translate-y-1/2 z-20 bg-[#F54927] text-white p-4 rounded-full shadow-2xl hover:bg-[#d63f1f] transition-all hover:scale-110"
          aria-label="Next"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>

        <!-- Etiqueta de categoría -->
        <div class="absolute top-2 left-2 z-10 bg-[#F54927] text-white px-4 py-2 rounded-full font-bold text-sm shadow-lg">
          <span id="slideshow-category">Movie</span>
        </div>
      </div>

      <!-- Descripción debajo del póster -->
      <div class="mt-8 text-center space-y-2 min-h-[100px]">
        <h4 id="slideshow-title" class="text-2xl font-bold text-gray-900 dark:text-white">
          Loading...
        </h4>
        <p id="slideshow-info" class="text-lg text-gray-600 dark:text-gray-400">
        </p>
      </div>

      <!-- Indicadores de progreso -->
      <div class="flex justify-center gap-2 mt-6">
        <div id="slideshow-dots" class="flex gap-2">
          <!-- Los puntos se generarán aquí -->
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }
  
  @keyframes float-reverse {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(20px) rotate(-5deg);
    }
  }
  
  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
  
  .animate-float-reverse {
    animation: float-reverse 5s ease-in-out infinite;
  }
  
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }
  
  /* Efecto de brillo al pasar el mouse sobre la sección de cine */
  .cinema-glow:hover {
    box-shadow: 0 0 30px rgba(245, 73, 39, 0.4);
  }

  /* Animaciones de la presentación */
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(20px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .slide-in {
    animation: slideIn 0.6s ease-out;
  }

  @keyframes pulse-dot {
    0%, 100% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.2);
    }
  }
</style>

<script>
  async function loadAbout() {
    const { avatar } = await import('../data/translations');
    
    // Actualizar avatar
    const avatarImg = document.getElementById('about-avatar') as HTMLImageElement;
    if (avatarImg) {
      avatarImg.src = avatar;
    }
  }
  
  // Actualizar al cambiar de idioma
  window.addEventListener('languageChange', (event: any) => {
    const { translations } = event.detail;
    
    // Actualizar elementos de texto
    ['about.bio', 'about.cinema', 'about.skillsTitle', 'about.favorites'].forEach(key => {
      const element = document.querySelector(`[data-i18n="${key}"]`);
      if (element) {
        const keys = key.split('.');
        let value: any = translations;
        for (const k of keys) {
          value = value[k];
        }
        if (value) {
          element.textContent = value;
        }
      }
    });
    
    // Actualizar título
    const title = document.querySelector('[data-i18n="about.title"]');
    if (title) {
      title.textContent = translations.about.title;
    }
  });
  
  // Carga inicial
  loadAbout();

  // ===== PRESENTACIÓN AUTOMÁTICA =====
  
  // Obtener claves de API desde data attributes
  const aboutSection = document.getElementById('about') as HTMLElement;
  const TMDB_API_KEY = aboutSection?.dataset.tmdbKey || '';
  
  // Importar datos desde archivos TypeScript
  let favoriteMoviesData: any[] = [];
  
  // Cargar películas desde archivos TS
  async function loadMediaData() {
    try {
      const moviesModule = await import('../data/movies');
      favoriteMoviesData = moviesModule.favoriteMovies || [];
    } catch (error) {
      console.error('Error loading media data:', error);
    }
  }

  // Datos globales de la presentación
  let allItems: any[] = [];
  let currentIndex = 0;
  let autoPlayInterval: any = null;

  // Cargar todo el contenido y fusionarlo en una sola presentación
  async function loadSlideshow() {
    // Primero cargar los datos desde archivos TS
    await loadMediaData();
    
    try {
      // Cargar películas usando el ID de TMDB
      const moviePromises = favoriteMoviesData.map(async (movie) => {
        try {
          const response = await fetch(
            `https://api.themoviedb.org/3/movie/${movie.id}?api_key=${TMDB_API_KEY}`
          );
          const movieData = await response.json();
          
          if (movieData && movieData.id) {
            return {
              type: 'Movie',
              title: movieData.title,
              poster: movieData.poster_path 
                ? `https://image.tmdb.org/t/p/w500${movieData.poster_path}`
                : 'https://via.placeholder.com/400x600?text=No+Poster',
              info: movieData.release_date ? movieData.release_date.split('-')[0] : 'N/A'
            };
          }
        } catch (error) {
          console.error(`Error fetching movie ${movie.id}:`, error);
        }
        return null;
      });

      // Cargar fotos
      let photoItems: any[] = [];
      try {
        const module = await import('../data/photos');
        const photos = module.personalPhotos || [];
        photoItems = photos.map((photo: any) => ({
          type: 'Photo',
          title: photo.description,
          poster: photo.url,
          info: photo.date || ''
        }));
      } catch (error) {
        console.error('Error loading photos:', error);
      }

      // Combinar todos los elementos
      const movies = (await Promise.all(moviePromises)).filter((item: any) => item !== null);
      allItems = [...movies, ...photoItems];

      // Mezclar elementos aleatoriamente
      allItems = allItems.sort(() => Math.random() - 0.5);

      if (allItems.length > 0) {
        initializeSlideshow();
        startAutoPlay();
      }
    } catch (error) {
      console.error('Error loading slideshow:', error);
    }
  }

  // Inicializar interfaz de la presentación
  function initializeSlideshow() {
    const prevBtn = document.getElementById('slideshow-prev');
    const nextBtn = document.getElementById('slideshow-next');

    if (prevBtn) {
      prevBtn.addEventListener('click', () => {
        currentIndex = (currentIndex - 1 + allItems.length) % allItems.length;
        showSlide(currentIndex);
        resetAutoPlay();
      });
    }

    if (nextBtn) {
      nextBtn.addEventListener('click', () => {
        currentIndex = (currentIndex + 1) % allItems.length;
        showSlide(currentIndex);
        resetAutoPlay();
      });
    }

    // Mostrar primera diapositiva
    showSlide(0);
    createDots();
  }

  // Mostrar diapositiva específica
  function showSlide(index: number) {
    const item = allItems[index];
    const posterContainer = document.getElementById('slideshow-poster');
    const titleElement = document.getElementById('slideshow-title');
    const infoElement = document.getElementById('slideshow-info');
    const categoryElement = document.getElementById('slideshow-category');

    if (!posterContainer || !titleElement || !infoElement || !categoryElement) return;

    // Actualizar póster con animación
    posterContainer.classList.remove('slide-in');
    void posterContainer.offsetWidth; // Forzar reflujo del DOM
    posterContainer.classList.add('slide-in');

    posterContainer.innerHTML = `
      <img 
        src="${item.poster}" 
        alt="${item.title}"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
    `;

    // Actualizar información de texto
    titleElement.textContent = item.title;
    infoElement.textContent = item.info;
    categoryElement.textContent = item.type;

    // Actualizar puntos
    updateDots(index);
  }

  // Crear puntos de progreso
  function createDots() {
    const dotsContainer = document.getElementById('slideshow-dots');
    if (!dotsContainer) return;

    const totalDots = Math.min(allItems.length, 10); // Máximo 10 puntos
    dotsContainer.innerHTML = Array(totalDots).fill(0).map((_, i) => `
      <div class="w-2 h-2 rounded-full bg-gray-400 dark:bg-gray-600 transition-all duration-300" data-dot="${i}"></div>
    `).join('');
  }

  // Actualizar punto activo
  function updateDots(index: number) {
    const dots = document.querySelectorAll('[data-dot]');
    const activeDotIndex = Math.floor((index / allItems.length) * dots.length);
    
    dots.forEach((dot, i) => {
      if (i === activeDotIndex) {
        dot.classList.add('bg-[#F54927]', 'w-8');
        dot.classList.remove('bg-gray-400', 'dark:bg-gray-600');
      } else {
        dot.classList.remove('bg-[#F54927]', 'w-8');
        dot.classList.add('bg-gray-400', 'dark:bg-gray-600');
      }
    });
  }

  // Funcionalidad de reproducción automática
  function startAutoPlay() {
    autoPlayInterval = setInterval(() => {
      currentIndex = (currentIndex + 1) % allItems.length;
      showSlide(currentIndex);
    }, 4000); // Cambiar cada 4 segundos
  }

  function resetAutoPlay() {
    if (autoPlayInterval) {
      clearInterval(autoPlayInterval);
    }
    startAutoPlay();
  }

  // Cargar presentación al cargar la página
  loadSlideshow();
</script>
